{
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react"],
	"parser": "babel-eslint",
	"rules": {
		"quotes": ["error", "single"],
		"curly": ["error", "multi"],
		"camelcase": [
			"error",
			{
				"properties": "always"
			}
		],
		"indent": ["error", "tab"],
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never"
			}
		],
		"object-curly-spacing": ["error", "always"],
		"max-len": [
			1, // 0 = off, 1 = warning, 2 = error
			{
				"code": 90
			}
		]
	}
}
